{
	"compilerOptions": {
		"jsx": "react-jsx",
		"allowJs": true,
		"checkJs": false,
		"resolveJsonModule": true,
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"module": "ESNext",
		"target": "ESNext",
		"isolatedModules": true,
		"noEmit": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {
			"@root/*": ["/*"],
			"@public/*": ["/public/*"],
			"@src/*": ["src/*"],
			"@components/*": ["src/components/*"],
			"@utils/*": ["src/utils/*"]
		}
	},
	"include": ["src", "**/*.jsx"],
    "exclude": ["node_modules", "dist"]
    
}
